<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        app:hl_cornerRadius="5dp"
        app:hl_shadowBackColor="#fff"
        app:hl_shadowColor="#08000000"
        app:hl_shadowLimit="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:padding="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_dp_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="矿机版本："
                    android:textColor="@color/black33"
                    android:textSize="@dimen/ctv_sizen_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_machine"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="低配版ETH矿机"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/ctv_sizen_14" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_dp_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="已购算力："
                    android:textColor="@color/black33"
                    android:textSize="@dimen/ctv_sizen_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_eth"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/ctv_sizen_14" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_dp_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="投资金额："
                    android:textColor="@color/black33"
                    android:textSize="@dimen/ctv_sizen_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="0USDT"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/ctv_sizen_14" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_dp_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="已挖矿："
                    android:textColor="@color/black33"
                    android:textSize="@dimen/ctv_sizen_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_day"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="9天"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/ctv_sizen_14" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_dp_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="已产出："
                    android:textColor="@color/black33"
                    android:textSize="@dimen/ctv_sizen_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_produce"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="0.0000ETH"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/ctv_sizen_14" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_dp_30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="可用余额："
                    android:textColor="@color/black33"
                    android:textSize="@dimen/ctv_sizen_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_quota"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="0.0000USDT"
                    android:textColor="@color/black33"
                    android:textSize="@dimen/ctv_sizen_14" />

            </RelativeLayout>


        </LinearLayout>
    </com.lihang.ShadowLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="95dp"
        android:gravity="center"
        android:text="注:矿机赎回扣减25%平台服务费"
        android:textColor="@color/black7e"
        android:textSize="@dimen/ctv_sizen_13" />


    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/album_dp_20"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/next_shape"
        android:gravity="center"
        android:text="赎回"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/ctv_sizen_15" />

</RelativeLayout>