<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <TextView
            android:id="@+id/text_usdt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/text_usdt_charge"
            android:drawableRight="@mipmap/icon_right_arrow"
            android:gravity="center|left"
            android:text="USDT"
            android:textColor="@color/black33"
            android:textSize="@dimen/ctv_sizen_15" />


        <TextView
            android:id="@+id/text_eth"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/text_usdt"
            android:layout_marginRight="80dp"
            android:background="@drawable/text_usdt_charge"
            android:drawableRight="@mipmap/icon_right_arrow"
            android:gravity="center|left"
            android:text="ETH"
            android:textColor="@color/black33"
            android:textSize="@dimen/ctv_sizen_15" />


        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_swach" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="80dp"
            android:background="@color/dive_line" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F7F9FB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="支付密码"
            android:textColor="#304052"
            android:textSize="@dimen/ctv_sizen_14" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:gravity="center|left"
            android:hint="请输入支付密码"
            android:inputType="textPassword"
            android:textColor="@color/colorAccent"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/ctv_sizen_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dive_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/text_usdt_charge"
            android:gravity="center|left"
            android:text="数量"
            android:textColor="@color/black33"
            android:textSize="@dimen/ctv_sizen_15" />


        <EditText
            android:id="@+id/et_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:cursorVisible="true"
            android:gravity="center|left"
            android:hint="请输入转换数量"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:maxLines="1"
            android:textColor="@color/black33"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/ctv_sizen_14" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_balance"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center|left"
        android:paddingLeft="13dp"
        android:text="最多可转"
        android:textColor="@color/black79"
        android:textSize="@dimen/ctv_sizen_13" />


    <TextView
        android:id="@+id/text_copy"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="13dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="兑换"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/ctv_sizen_15" />
</LinearLayout>