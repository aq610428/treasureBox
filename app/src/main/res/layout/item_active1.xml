<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_extension"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@mipmap/icon_bg_bc"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_userableNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用消费额度：0 "
                android:textColor="#A5B7FF"
                android:textSize="@dimen/ctv_sizen_13" />


            <TextView
                android:id="@+id/text_exchange"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/usdt_bg_shape"
                android:gravity="center"
                android:text="去兑换 "
                android:textColor="#3F63F4"
                android:textSize="@dimen/ctv_sizen_12" />

        </RelativeLayout>


        <TextView
            android:id="@+id/text_usedNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="1. 消费额度满1680元即可兑换一次150U挖矿机会、
 \n2. 消费额度满7875元即可兑换一次750U挖矿机会
 \n3. 挖矿机会暂时不支持转让"
            android:textColor="#A5B7FF"
            android:textSize="@dimen/ctv_sizen_13" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="注：可用消费额度为您在凯越宝盒商城购买的除凯越宝盒矿机之外的所有商品的订单额度总和，从您有效的下单到商家发货开始计算10天内没有发生退款退货的订单将累计消费额度"
            android:textColor="#A5B7FF"
            android:textSize="@dimen/ctv_sizen_13" />

    </LinearLayout>

</RelativeLayout>